---
import EventCard from "../components/EventCard.astro";
import "../styles/global.css";
import typFlyer from "../../public/img/typ.jpg";
import gritoFlyer from "../../public/img/grito_2.jpg";
import BaseLayout from "../layouts/BaseLayout.astro";
import ButtonStart from "../components/ButtonStart.astro";

const events = [
  {
    date: "2 octubre 2025",
    venue: "Rock N' Riff Bar",
    city: "C.C. Las Chimeneas",
    price:  "NO COVER",
    image: typFlyer,
    url: "https://www.instagram.com/p/DPPsfanDRm0",
  },
  {
    date: "31 octubre 2025",
    venue: "Terraza Cultural",
    city: "El Vi√±edo",
    price:  "$6",
    image: gritoFlyer,
    url: "https://www.instagram.com/p/DOwqKf6kkhn",
  },
];
---

<BaseLayout mainText="Calendario" subText="" showButtonStart={false}>
  <div class="flex flex-col lg:flex-row gap-4 w-full md:w-8/12 lg:w-6/12 xl:w-4/12 mx-auto">
    {
      events.map((event) => (
        <EventCard
          date={event.date}
          venue={event.venue}
          city={event.city}
          price={event.price}
          image={event.image}
          url={event.url}
        />
      ))
    }
  </div>
  <div class="w-full md:w-8/12 lg:w-6/12 xl:w-4/12 mx-auto">
    <ButtonStart />
  </div>
</BaseLayout>
